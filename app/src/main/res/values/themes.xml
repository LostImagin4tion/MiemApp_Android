<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MIEMApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/semi_transparent</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="Theme.Launcher" parent="Theme.MIEMApp">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- swap colorAccent with colorPrimary-->
    <style name="InverseAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="BadgeStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.MIEMApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MIEMApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MIEMApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>