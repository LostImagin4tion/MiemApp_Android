<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragmentSchedule"
    android:id="@+id/schedule">
    <!-- nav graph id must be same as bottom menu item id-->

    <fragment
        android:id="@+id/fragmentSchedule"
        android:name="ru.hse.miem.miemapp.presentation.schedule.ScheduleFragment"
        android:label="Schedule Fragment"
        tools:layout="@layout/fragment_schedule" >

        <argument
            android:name="userId"
            app:argType="long"
            app:nullable="false"
            android:defaultValue="-1L" />

        <argument
            android:name="isTeacher"
            app:argType="boolean"
            app:nullable="false"
            android:defaultValue="false" />

    </fragment>

</navigation>